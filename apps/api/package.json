{
  "name": "@wallet-platform/api",
  "version": "1.0.0",
  "description": "API server for wallet platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "worker:dev": "tsx watch src/worker.ts",
    "worker": "node dist/worker.js",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "node ../../test-phase2-e2e.js"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@prisma/client": "^5.22.0",
    "@wallet-platform/core": "workspace:*",
    "@wallet-platform/db": "workspace:*",
    "@wallet-platform/pkpass": "workspace:*",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "jose": "^6.1.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "form-data": "^4.0.0",
    "node-fetch": "^2.7.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
